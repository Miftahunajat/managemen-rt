<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:foreground="?android:attr/selectableItemBackground"
                                                   android:background="@color/grey_50"
                                                   android:layout_height="wrap_content">
    <TextView
            android:text="Daftar"
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_daftar"
            android:textColor="@color/orange_500"
            android:textSize="@dimen/font_title"
            android:padding="@dimen/textview_padding_default"
            android:background="@drawable/background_orange_line_soft"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Arisan Ibu ibu 1"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"/>
    <TextView
            android:text="Sampai dengan"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_subtitle"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/tv_tanggal"
            app:layout_constraintTop_toTopOf="@+id/textView18"/>
    <TextView
            android:text="Biaya Iuran"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_subtitle"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/tv_minimum_iuran"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" android:layout_marginTop="40dp"/>
    <TextView
            android:text="17 Agustus 2019"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_title"
            android:padding="4dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tanggal"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"/>
    <TextView
            android:text="Rp, 30,000"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_title"
            android:padding="4dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:id="@+id/tv_minimum_iuran"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorSoftAccent1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/tv_tanggal"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>