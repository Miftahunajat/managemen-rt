<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".screens.IuranFragment">
    <ImageView
            android:id="@+id/iv_bg_pattern2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_pattern_blue"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_extra_extra_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="32dp"
            android:layout_marginBottom="-128dp"
            app:cardElevation="8dp"
            android:id="@+id/cardView">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                               android:id="@+id/cl_1"
                                                               app:layout_constraintTop_toBottomOf="@id/view"
                                                               android:background="?android:attr/selectableItemBackground"
                                                               android:layout_marginTop="32dp"
                                                               android:clickable="true"
                                                               app:layout_constraintStart_toStartOf="@+id/text_status_iuran"
                                                               android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/menu_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                            android:id="@+id/circle_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/background_green_line_soft"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp"/>

                    <ImageView
                            android:layout_width="@dimen/icon_menu"
                            android:layout_height="@dimen/icon_menu"
                            app:srcCompat="@drawable/ic_social"
                            android:padding="@dimen/padding_small"
                            app:layout_constraintBottom_toBottomOf="@id/circle_1"
                            app:layout_constraintLeft_toLeftOf="@id/circle_1"
                            app:layout_constraintRight_toRightOf="@id/circle_1"
                            app:layout_constraintTop_toTopOf="@id/circle_1" app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintVertical_bias="1.0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                        android:text="Sudah membayar"
                        android:layout_width="wrap_content"
                        android:textColor="@color/green_500"
                        android:layout_height="wrap_content" android:id="@+id/tv_1"
                        app:layout_constraintBottom_toBottomOf="@+id/menu_1"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"
                        app:layout_constraintStart_toStartOf="@+id/textView8"
                />
                <TextView
                        android:text="Iuran Sosial"
                        android:layout_width="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:textSize="@dimen/font_title"
                        app:layout_constraintVertical_chainStyle="packed"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        app:layout_constraintStart_toEndOf="@+id/menu_1"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/menu_1"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                           android:id="@+id/cl_2"
                                                           app:layout_constraintTop_toBottomOf="@id/cl_1"
                                                           android:layout_marginTop="16dp"
                                                           android:background="?android:attr/selectableItemBackground"
                                                           android:clickable="true"
                                                           app:layout_constraintStart_toStartOf="@+id/text_status_iuran"
                                                           android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                        android:id="@+id/circle_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/background_red_line_soft"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp"/>

                <ImageView
                        android:layout_width="@dimen/icon_menu"
                        android:layout_height="@dimen/icon_menu"
                        app:srcCompat="@drawable/ic_trash"
                        android:padding="@dimen/padding_small"
                        app:layout_constraintBottom_toBottomOf="@id/circle_2"
                        app:layout_constraintLeft_toLeftOf="@id/circle_2"
                        app:layout_constraintRight_toRightOf="@id/circle_2"
                        app:layout_constraintTop_toTopOf="@id/circle_2" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="1.0"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="Belum membayar Iuran"
                    android:layout_width="wrap_content"
                    android:textColor="@color/red_500"
                    android:layout_height="wrap_content" android:id="@+id/tv_2"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="@+id/menu_2"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"/>
            <TextView
                    android:text="Iuran Sampah"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_2"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    app:layout_constraintStart_toEndOf="@+id/menu_2" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/menu_2" android:layout_marginLeft="8dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
               android:id="@+id/cl_3"
                app:layout_constraintTop_toBottomOf="@id/cl_2"
               android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="@+id/text_status_iuran"
               android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/menu_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
            >

                <ImageView
                        android:id="@+id/circle_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/background_orange_line_soft"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp"/>

                <ImageView
                        android:layout_width="@dimen/icon_menu"
                        android:layout_height="@dimen/icon_menu"
                        app:srcCompat="@drawable/ic_arisan_ibuk2"
                        android:padding="@dimen/padding_small"
                        app:layout_constraintBottom_toBottomOf="@id/circle_3"
                        app:layout_constraintLeft_toLeftOf="@id/circle_3"
                        app:layout_constraintRight_toRightOf="@id/circle_3"
                        app:layout_constraintTop_toTopOf="@id/circle_3" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="1.0"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="Daftar Arisan"
                    android:layout_width="wrap_content"
                    android:background="@color/orange_500"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_subtitle"
                    android:layout_height="wrap_content" android:id="@+id/tv_daftar_arisan"
                    android:padding="2dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_3"
                    app:layout_constraintStart_toStartOf="@+id/tv_3" />
            <TextView
                    android:text="Belum mendaftar arisan"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange_500"
                    android:layout_height="wrap_content" android:id="@+id/tv_3"
                    app:layout_constraintBottom_toTopOf="@+id/tv_daftar_arisan"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"/>
            <TextView
                    android:text="Iuran Arisan"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/font_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_3"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_height="wrap_content" android:id="@+id/textView10"
                    app:layout_constraintStart_toEndOf="@+id/menu_3" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/menu_3" android:layout_marginLeft="8dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:text="STATUS IURAN"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_status_iuran"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="32dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorSoftAccent1"
                    android:id="@+id/view" tools:layout_editor_absoluteX="0dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_status_iuran"/>
            <TextView
                    android:text="16 Agustus 2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:id="@+id/textView28" app:layout_constraintEnd_toEndOf="@+id/view"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/view" android:layout_marginBottom="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>