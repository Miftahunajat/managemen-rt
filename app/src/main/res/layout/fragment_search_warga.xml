<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".screens.SearchWargaFragment">
    <EditText
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:inputType="textPersonName"
            android:hint="Cari Nama"
            android:ems="10"
            android:paddingLeft="8dp"
            android:textSize="@dimen/font_title"
            android:drawableLeft="@drawable/bg_search_icon"
            android:id="@+id/editText"
            android:background="@drawable/background_line_soft_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="16dp"
            app:layout_constraintTop_toTopOf="parent" android:drawableStart="@drawable/bg_search_icon"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_warga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_data_warga"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>