<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toEndOf="@id/textView26"
            app:layout_constraintTop_toTopOf="@id/textView26"
            app:layout_constraintBottom_toBottomOf="@id/textView26"
            app:layout_constraintEnd_toStartOf="@id/textView30"
            app:layout_constraintLeft_toRightOf="@id/textView26"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Belum Membayar"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/grey_500"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:id="@+id/textView26"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            tools:listitem="@layout/item_belum_membayar"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:itemCount="2"
            app:layout_constraintTop_toBottomOf="@+id/textView26" app:layout_constraintStart_toStartOf="@+id/textView26"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="7"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:id="@+id/textView30" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="@+id/divider" app:layout_constraintBottom_toBottomOf="@+id/divider"/>
</androidx.constraintlayout.widget.ConstraintLayout>